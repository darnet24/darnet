---
import "../styles/global.css";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import { cennik } from "../data/cms-content.json";
---

<html lang="pl" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <title>Cennik usług IT | Darnet24</title>
    <meta name="description" content={cennik.description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>
  <body class="bg-white dark:bg-gray-900 text-gray-900 dark:text-white">
    <Navbar />

    <!-- CTA do obsługi firm -->
    <section class="py-6 bg-yellow-400 text-black text-center">
      <p>
        {cennik.cta.text}  
        <a href={cennik.cta.linkUrl} class="underline font-semibold">
          {cennik.cta.linkText}
        </a>
      </p>
    </section>

    <!-- HERO -->
    <section class="text-center py-16 px-6 bg-gray-100 dark:bg-gray-800">
      <h1 class="text-4xl font-bold mb-4">{cennik.title}</h1>
      <p class="text-lg max-w-3xl mx-auto">{cennik.description}</p>
    </section>

    <!-- USŁUGI W JEDNEJ LINII -->
    <section class="py-16 px-6 max-w-5xl mx-auto space-y-8">
      {cennik.sections.map(section => (
        <div>
          <h2 class="text-2xl font-semibold mb-4">{section.title}</h2>
          <div class="space-y-2">
            {section.items.map(item => (
              <div class="grid grid-cols-2 border-b py-2 dark:border-gray-700">
                <div>{item.label}</div>
                <div class="text-right">{item.price}</div>
              </div>
            ))}
          </div>
        </div>
      ))}
    </section>

    <!-- DOJAZD I DOPŁATY -->
    <section class="py-12 px-6 max-w-5xl mx-auto">
      <div class="bg-gray-800 dark:bg-gray-700 text-white p-6 rounded-lg space-y-2">
        <h2 class="text-xl font-semibold">Koszty dojazdu i dopłaty</h2>
        <ul class="list-disc pl-5 space-y-1">
          {cennik.extras.dojazd.map(d => (
            <li><strong>{d.label}:</strong> {d.value}</li>
          ))}
          {cennik.extras.doplaty.map(d => (
            <li><strong>{d.label}:</strong> {d.value}</li>
          ))}
        </ul>
      </div>
    </section>

    <Footer />
  </body>
</html>
